// ================== LIVE REGISTERED EMAILS ==================
// Google Sheet JSON URL (publish Google Sheet as JSON via https://opensheet.vercel.app/ atau API)
const sheetID = "1abcDEFghiJKLmnOPQRstuVWXYZ123456"; // Ganti dengan ID Sheet-mu
const sheetName = "emails"; // nama sheet
const sheetURL = `https://opensheet.vercel.app/<sheetID>/<sheetName>}`;

// Inisialisasi array kosong
let registeredEmails = {
    dasar: [],
    menengah: [],
    intensif: [],
    elite: []
};

// Fetch data dari Google Sheet
async function fetchRegisteredEmails() {
    try {
        const response = await fetch(sheetURL);
        const data = await response.json();

        // Data di Sheet diasumsikan memiliki kolom: email, kelas
        // Contoh: {email: "email1@gmail.com", kelas: "dasar"}
        data.forEach(entry => {
            const kelas = entry.kelas.toLowerCase();
            const email = entry.email.toLowerCase();
            if (registeredEmails[kelas]) {
                registeredEmails[kelas].push(email);
            }
        });

        console.log("‚úÖ Registered emails updated from Google Sheet:", registeredEmails);
    } catch (error) {
        console.error("‚ùå Gagal mengambil data dari Google Sheet:", error);
    }
}

// Panggil fetch saat load
fetchRegisteredEmails();

// ================== TOGGLE DROPDOWN ==================
function toggleDropdown() {
    const menu = document.getElementById("dropdownMenu");
    menu.style.display = (menu.style.display === "block") ? "none" : "block";
}

// ================== LOGOUT ==================
function logout() {
    localStorage.removeItem("unlockedClasses");
    localStorage.removeItem("subscriptions");
    alert("Logout berhasil! Anda akan diarahkan ke beranda.");
    window.location.href = "index.html";
}

// ================== SHOW ALL / FILTER ==================
function showAll() {
    document.querySelectorAll(".menu-card").forEach(card => card.style.display = "block");
}
function showClass(cls) {
    document.querySelectorAll(".menu-card").forEach(card => {
        card.style.display = card.classList.contains(cls) ? "block" : "none";
    });
}

// ================== AKSES MATERI ==================
let googleFormLink = {
    dasar: "https://forms.gle/FormDasar123",
    menengah: "https://forms.gle/FormMenengah123",
    intensif: "https://forms.gle/FormIntensif123",
    elite: "https://forms.gle/FormElite123"
};

let currentClassForRegister = null;

function accessMaterial(className, url) {
    let unlocked = JSON.parse(localStorage.getItem("unlockedClasses")) || {};

    if (unlocked[className]) {
        window.open(url, "_blank");
        return;
    }

    let email = prompt("Masukkan email yang Anda daftarkan:");
    if (!email) return;

    email = email.toLowerCase();

    if (registeredEmails[className].includes(email)) {
        unlocked[className] = true;
        localStorage.setItem("unlockedClasses", JSON.stringify(unlocked));
        updateProgress();
        window.open(url, "_blank");
    } else {
        currentClassForRegister = className;
        openModal();
    }
}

// ================== MODAL ==================
function openModal() {
    document.getElementById("registerModal").style.display = "flex";
}
function closeModal() {
    document.getElementById("registerModal").style.display = "none";
}
function goToForm() {
    if (currentClassForRegister) {
        window.open(googleFormLink[currentClassForRegister], "_blank");
    }
    closeModal();
}

// ================== PROGRESS BAR ==================
function updateProgress() {
    let unlocked = JSON.parse(localStorage.getItem("unlockedClasses")) || {};
    let total = Object.keys(registeredEmails).length;
    let done = Object.keys(unlocked).length;
    let percent = (done / total) * 100;
    document.getElementById("progressFill").style.width = percent + "%";
}

// Inisialisasi progress
updateProgress();

// ================== FLOATING WA ==================
function openWhatsApp() {
    window.open("https://wa.me/6281234567890", "_blank");
}

